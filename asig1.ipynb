import pandas as pd
import numpy as np

# 1. Carga de datos
df = pd.read_csv('World University Rankings 2023.csv')

# 2. Inspección inicial técnica
print(df.info())

# 3. LIMPIEZA DE COLUMNAS NUMÉRICAS
# Muchas columnas vienen con comas (20,965) o símbolos (42%) que impiden cálculos.
def clean_numeric(value):
    if isinstance(value, str):
        # Quitamos comas, símbolos de porcentaje y espacios
        value = value.replace(',', '').replace('%', '').strip()
        # Caso especial: El dataset tiene rangos como "34.0–39.2". 
        # Un profesional suele tomar el promedio del rango.
        if '–' in value:
            low, high = value.split('–')
            return (float(low) + float(high)) / 2
    try:
        return float(value)
    except:
        return np.nan

cols_to_fix = [
    'No of student', 'International Student', 'OverAll Score', 
    'Teaching Score', 'Research Score', 'Citations Score', 
    'Industry Income Score', 'International Outlook Score'
]

for col in cols_to_fix:
    df[col] = df[col].apply(clean_numeric)

# 4. TRATAMIENTO DE LA COLUMNA "Female:Male Ratio"
# Esta columna es un string "48 : 52". La convertiremos en una métrica: % de mujeres.
def get_female_ratio(value):
    try:
        if isinstance(value, str) and ':' in value:
            f, m = value.split(':')
            return float(f) / (float(f) + float(m))
    except:
        return np.nan
    return np.nan

df['Female_Ratio'] = df['Female:Male Ratio'].apply(get_female_ratio)
df.drop(columns=['Female:Male Ratio'], inplace=True)


# 5. RESULTADO FINAL
print("Dataset listo para minería de datos:")
print(df.head())
